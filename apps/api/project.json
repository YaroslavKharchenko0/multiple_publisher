{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/api",
        "format": ["cjs"],
        "bundle": false,
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "staging": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          },
          "generateLockfile": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "staging": {
          "buildTarget": "api:build:staging"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "drizzle:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit generate --config apps/api/src/database/drizzle.config.ts"
      },
      "configurations": {
        "development": {
          "envFile": "apps/api/.env.development",
          "command": "drizzle-kit generate --config apps/api/src/database/drizzle.config.ts"
        },
        "staging": {
          "envFile": "apps/api/.env.staging",
          "command": "drizzle-kit generate --config apps/api/src/database/drizzle.config.ts"
        },
        "production": {
          "envFile": "apps/api/.env.production",
          "command": "drizzle-kit generate --config apps/api/src/database/drizzle.config.ts"
        }
      }
    },
    "drizzle:push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit push:pg"
      },
      "configurations": {
        "development": {
          "envFile": "apps/api/.env.development",
          "command": "drizzle-kit push --config apps/api/src/database/drizzle.config.ts"
        },
        "staging": {
          "envFile": "apps/api/.env.staging",
          "command": "drizzle-kit push --config apps/api/src/database/drizzle.config.ts"
        },
        "production": {
          "envFile": "apps/api/.env.production",
          "command": "drizzle-kit push --config apps/api/src/database/drizzle.config.ts"
        }
      }
    },
    "drizzle:drop": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit drop"
      },
      "configurations": {
        "development": {
          "envFile": "apps/api/.env.development",
          "command": "drizzle-kit drop --config apps/api/src/database/drizzle.config.ts"
        },
        "staging": {
          "envFile": "apps/api/.env.staging",
          "command": "drizzle-kit drop --config apps/api/src/database/drizzle.config.ts"
        },
        "production": {
          "envFile": "apps/api/.env.production",
          "command": "drizzle-kit drop --config apps/api/src/database/drizzle.config.ts"
        }
      }
    },
    "drizzle:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit check"
      },
      "configurations": {
        "development": {
          "envFile": "apps/api/.env.development",
          "command": "drizzle-kit check --config apps/api/src/database/drizzle.config.ts"
        },
        "staging": {
          "envFile": "apps/api/.env.staging",
          "command": "drizzle-kit check --config apps/api/src/database/drizzle.config.ts"
        },
        "production": {
          "envFile": "apps/api/.env.production",
          "command": "drizzle-kit check --config apps/api/src/database/drizzle.config.ts"
        }
      }
    },
    "drizzle:studio": {
      "executor": "nx:run-commands",
      "options": {
        "command": "drizzle-kit studio"
      },
      "configurations": {
        "development": {
          "envFile": "apps/api/.env.development",
          "command": "drizzle-kit studio --config apps/api/src/database/drizzle.config.ts"
        },
        "staging": {
          "envFile": "apps/api/.env.staging",
          "command": "drizzle-kit studio --config apps/api/src/database/drizzle.config.ts"
        },
        "production": {
          "envFile": "apps/api/.env.production",
          "command": "drizzle-kit studio --config apps/api/src/database/drizzle.config.ts"
        }
      }
    }
  }
}
